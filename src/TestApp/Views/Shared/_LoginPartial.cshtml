@using System.Security.Claims

@if (User.IsSignedIn())
{
    <!-- Header Bar -->
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <div class="row header">
            <div class="col-xs-12">
                <div class="user pull-right">
                    <div class="item dropdown" uib-dropdown>
                        <a href="#" class="dropdown-toggle" uib-dropdown-toggle>
                            <img src="~/images/avatar.jpg">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-header">
                                <span class="text-left"> Signed in as <br /> <strong>@User.GetUserName()</strong></span>
                            </li>
                            <li class="divider"></li>
                            <li class="link">
                                <a href="#">
                                    Profile
                                </a>
                            </li>
                            <li class="link">
                                <a href="#">
                                    Menu Item 1
                                </a>
                            </li>
                            <li class="link">
                                <a href="#">
                                    Menu Item 2
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li class="link">
                                <button type="submit" class="btn btn-link link">Log off</button>
                            </li>
                        </ul>
                    </div>
                    <div class="item dropdown" uib-dropdown>
                        <a href="#" class="dropdown-toggle" uib-dropdown-toggle>
                            <i class="fa fa-bell-o"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-header">
                                Notifications
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Server Down!</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="pull-left dialogLogo"><img src="~/images/Dialog-Logo-Small.png" /></div>
                <div class="meta">
                    <div class="page">
                        Dashboard
                    </div>
                    <div class="breadcrumb-links">
                        Home / Dashboard
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- End Header Bar -->
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
